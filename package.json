{
  "name": "ruthful-merch-store-backend",
  "version": "1.0.0",
  "description": "Backend for the Ruthful Merch Store platform, providing APIs for user authentication, store management, order handling, and payment integration.",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "tsx watch index.ts",
    "test": "mocha --recursive tests",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "clean": "rm -rf dist",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "start:prod": "NODE_ENV=production node index.js",
    "db:seed": "node database/seeds.js",
    "db:migrate": "node database/migrate.js",
    "postinstall": "npm run build"
  },
  "dependencies": {
    "@babylonjs/core": "^7.35.1",
    "@babylonjs/loaders": "^7.35.1",
    "@hono/node-server": "^1.13.7",
    "axios": "^1.7.7",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.5",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express-rate-limit": "^7.4.1",
    "helmet": "^8.0.0",
    "hono": "^4.6.12",
    "ioredis": "^5.4.1",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.8.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "redis": "^4.7.0",
    "sharp": "^0.33.5",
    "stripe": "^17.4.0",
    "three": "^0.170.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^22.10.5",
    "chai": "^5.1.2",
    "cross-env": "^7.0.3",
    "mocha": "^10.8.2",
    "nodemon": "^3.1.7",
    "supertest": "^7.0.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "author": "Ruthful Hearts <ruthfulhearts@gmail.com>",
